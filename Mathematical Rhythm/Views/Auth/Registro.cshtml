@model MathematicalRhythm.Models.Usuario
@using MathematicalRhythm.Models
@using Microsoft.Extensions.Options
@inject IOptions<GoogleRecaptchaConfig> RecaptchaConfig
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Registro | Mathematical Rhythm";
}

<style>
    
    body {
        background-image: url('/images/pexels-yasin.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        min-height: 100vh;
    }

    .music-login-bg {
        background-color: rgba(15, 12, 41, 0.7);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(3px);
    }

    .login-container {
        width: 100%;
        max-width: 500px; /* Un poco más ancho para el formulario de registro */
        padding: 0 20px;
    }

    .title-text {
        font-size: 2.8rem;
        font-weight: 800;
        color: #8b5cf6;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 0 10px rgba(139, 92, 246, 0.5);
        animation: titleBounce 1.5s ease-out;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    .login-card {
        background: rgba(15, 12, 41, 0.85);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        animation: cardBounce 1.5s ease-out 0.3s;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    @@keyframes titleBounce {
        0% {
            transform: translateY(-50px);
            opacity: 0;
        }

        60% {
            transform: translateY(10px);
            opacity: 1;
        }

        80% {
            transform: translateY(-5px);
        }

        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes cardBounce {
        0% {
            transform: translateY(50px);
            opacity: 0;
        }

        60% {
            transform: translateY(-10px);
            opacity: 1;
        }

        80% {
            transform: translateY(5px);
        }

        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .form-control {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        padding: 12px 15px;
        margin-bottom: 20px;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: #8b5cf6;
            box-shadow: 0 0 0 0.25rem rgba(139, 92, 246, 0.25);
            color: white;
        }

    .btn-register {
        background: linear-gradient(45deg, #8b5cf6, #8b5cf6); 
        border: none;
        padding: 12px;
        font-weight: 600;
        letter-spacing: 1px;
        width: 100%;
        margin-top: 10px;
        transition: all 0.3s;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(109, 40, 217, 0.4);
        }

    .link-purple {
        color: #a78bfa;
        transition: all 0.2s;
        font-size: 0.9rem;
    }

        .link-purple:hover {
            color: #8b5cf6;
            text-decoration: none;
        }

    /* Ajustes para el formulario de dos columnas */
    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -10px;
    }

    .form-col {
        padding: 0 10px;
        flex: 1;
        min-width: 200px;
    }
</style>

<div class="music-login-bg">
    <div class="login-container">
        <h1 class="title-text">CREAR CUENTA</h1>

        <div class="login-card">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mb-4">@TempData["Error"]</div>
            }

            <form asp-action="Registro" method="post" id="registerForm">
                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label asp-for="Nombre" class="text-white mb-1">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-col">
                        <div class="form-group">
                            <label asp-for="Email" class="text-white mb-1">Correo electrónico</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Contrasena" class="text-white mb-1">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Contrasena" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmarContrasena" class="text-white mb-1">Confirmar Contraseña</label>
                    <input id="ConfirmarContrasena" name="ConfirmarContrasena" type="password" class="form-control" placeholder="••••••••" />
                </div>

                <!-- Widget de reCAPTCHA -->
                <div class="mb-3">
                    <div class="g-recaptcha" data-sitekey="@RecaptchaConfig.Value.SiteKey"></div>
                </div>




                <button type="submit" class="btn btn-register" id="submit-btn">CREAR CUENTA</button>

                <div class="text-center mt-4">
                    <a href="/Auth/Login" class="link-purple">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Script de reCAPTCHA -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}