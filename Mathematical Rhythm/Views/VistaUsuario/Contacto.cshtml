@{
    ViewData["Title"] = "Contáctanos | Mathematical Rhythm";
}

<div class="min-h-screen bg-gray-50 text-gray-800 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <!-- Encabezado minimalista -->
        <div class="text-center mb-12">
            <h1 class="text-3xl font-light tracking-wide sm:text-4xl mb-4 text-amber-800">
                Contáctanos
            </h1>
            <p class="max-w-xl mx-auto text-base text-gray-600">
                ¿Tienes preguntas o sugerencias? Escríbenos y te responderemos pronto.
            </p>
        </div>

        <!-- Contenedor del formulario - diseño limpio -->
        <div class="bg-white rounded-xl shadow-sm p-6 sm:p-8">
            <form class="space-y-6">
                <!-- Grupo de inputs - tamaño consistente -->
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                        <input type="text" id="nombre" name="nombre"
                               class="w-full px-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-1 focus:ring-amber-500 focus:border-amber-500 placeholder-gray-400"
                               placeholder="Tu nombre">
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                        <input type="email" id="email" name="email"
                               class="w-full px-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-1 focus:ring-amber-500 focus:border-amber-500 placeholder-gray-400"
                               placeholder="tu@email.com">
                    </div>

                    <div>
                        <label for="asunto" class="block text-sm font-medium text-gray-700 mb-1">Asunto</label>
                        <select id="asunto" name="asunto"
                                class="w-full px-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-1 focus:ring-amber-500 focus:border-amber-500">
                            <option value="" disabled selected>Selecciona un asunto</option>
                            <option value="soporte">Soporte técnico</option>
                            <option value="colaboracion">Colaboración</option>
                            <option value="sugerencia">Sugerencia</option>
                            <option value="otro">Otro</option>
                        </select>
                    </div>

                    <div>
                        <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1">Mensaje</label>
                        <textarea id="mensaje" name="mensaje" rows="4"
                                  class="w-full px-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-1 focus:ring-amber-500 focus:border-amber-500 placeholder-gray-400"
                                  placeholder="Escribe tu mensaje aquí..."></textarea>
                    </div>
                </div>

                <!-- Botón de enviar - proporción adecuada -->
                <div class="pt-2">
                    <button type="submit"
                            class="w-full px-4 py-3 text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                        Enviar Mensaje
                    </button>
                </div>
            </form>
        </div>

        <!-- Información de contacto - diseño compacto -->
        <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
            <div class="p-4 bg-white rounded-lg shadow-sm">
                <div class="mx-auto flex items-center justify-center h-10 w-10 rounded-full bg-amber-100 text-amber-600 mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Correo</h3>
                <p class="text-sm text-gray-700">contacto@mathematicalrhythm.com</p>
            </div>

            <div class="p-4 bg-white rounded-lg shadow-sm">
                <div class="mx-auto flex items-center justify-center h-10 w-10 rounded-full bg-amber-100 text-amber-600 mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Teléfono</h3>
                <p class="text-sm text-gray-700">+1 (555) 123-4567</p>
            </div>

            <div class="p-4 bg-white rounded-lg shadow-sm">
                <div class="mx-auto flex items-center justify-center h-10 w-10 rounded-full bg-amber-100 text-amber-600 mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Oficina</h3>
                <p class="text-sm text-gray-700">Av. Electrónica 123</p>
            </div>
        </div>

        <!-- Pie minimalista -->
        <div class="mt-12 text-center text-xs text-gray-400">
            <p>Mathematical Rhythm © @DateTime.Now.Year - Todos los derechos reservados</p>
        </div>
    </div>
</div>